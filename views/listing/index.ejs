<% layout("/layout/boilerplate") %>
<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter{
    margin-top: 1rem;
    text-align: center;
    margin-left: 1.5rem;
    cursor: pointer;
    opacity: 0.7;
   
  }
  .filter:hover{
    opacity:1;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 15px;
    height: 3rem;
    padding: 1rem;
    margin-left: 1rem;
    
  }
  
</style>
    <!-- <h3>show all listing</h3> -->
     <div id="filters">
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>amazing pools</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-cow"></i>
        <p>farms</p>
      </div>
      <div class="filter">
        <i class="fa-brands fa-playstation"></i>
        <p>national parks</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-campground"></i>
        <p>camping</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-baseball-bat-ball"></i>
        <p>play</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>beach</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-water"></i>
        <p>lake</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>rooms</p>
      </div>
      <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>castles</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>trending</p>
      </div>
