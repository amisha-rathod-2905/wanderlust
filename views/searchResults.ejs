<% layout("/layout/boilerplate") %>

<!-- views/searchResults.ejs -->
<h1>Search Results</h1>


<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
  <% for(let listing of listings) { %>
    <div class="card" style="width: 18rem; height: 20rem; margin : 1rem;border: none; ">
      <a href="/listing/<%= listing._id %>" class="listing-link">
        <img src="<%= listing.image.url %>" class="listing-img" style="width: 100%; height: 17rem;border-radius: 1rem; " class="card-img-top" alt="listingimage">
       
        <div class="card-body" style="padding:0%;">
          <p class="card-text" style="padding:0%;"> 
           <b>  <%= listing.title %> </b> <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
          <i class="tax-info">+18% GST </i>
          </p>
        </div>
      </a>  
      </div>
      <%  } %>
</div>